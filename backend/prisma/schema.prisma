// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  firmName  String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  designs   Design[]
  catalogues Catalogue[]
  groups    Group[]
}

model Catalogue {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  designs   Design[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([name])
}

model Design {
  id            String   @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  catalogueId   String?
  catalogue     Catalogue? @relation(fields: [catalogueId], references: [id], onDelete: SetNull)
  name          String?  // Design name (optional for backward compatibility)
  image         String   // Base64 or URL
  wholesalePrice Float
  retailPrice    Float
  fabric         String
  description    String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([userId])
  @@index([catalogueId])
  @@index([fabric])
  @@index([createdAt])
}

model Group {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  members   GroupMember[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model GroupMember {
  id        String   @id @default(cuid())
  groupId   String
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  name      String
  phoneNumber String
  createdAt DateTime @default(now())

  @@index([groupId])
  @@unique([groupId, phoneNumber])
}

